{% extends 'note/layout.html.twig' %}

{% block title %}Note index{% endblock %}

{% block main %}
    <table class="table table-bordered table-hover text-center">
        <thead>
            <tr>
                <th>{{ 'notes.index.table.title'|trans }}</th>
                <th>{{ 'notes.index.table.body'|trans }}</th>
                <th>{{ 'notes.index.table.bgcolor'|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.title }}</td>
                <td>{{ note.body }}</td>
                <td style="background-color: {{  note.backgroundColor is not null ? '#'~ note.backgroundColor : '#000' }}"></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <span class="fa fa-cogs"></span>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="{{ path('note_show', {'id': note.id}) }}">show</a></li>
                            <li><a href="{{ path('note_edit', {'id': note.id}) }}">edit</a></li>
                        </ul>
                    </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'notes.index.table.no_records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

{% block sidebar %}
    <ul class="list-group">
        <li class="list-group-item"><a href="{{ path('note_new') }}">{{ 'notes.new'|trans }}</a> </li>
    </ul>
{% endblock %}