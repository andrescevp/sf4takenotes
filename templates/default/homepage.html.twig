{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{% block body %}
    <div class="btn-group float-menu">
        <a class="btn btn-success" href="{{ path('note_new') }}">{{ 'notes.new'|trans }}</a>
    </div>
    {% for noteRow in notes|batch(4) %}
        <div class="row">
            {% for note in noteRow %}
                <div class="col-md-3">
                    {{ include('note/_noteblock.html.twig') }}
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/colourBrightness.js-master/jquery.colourbrightness.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            // Target your element
            $('.note').colourBrightness();
        });
    </script>
{% endblock %}
